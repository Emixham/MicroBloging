@{
    ViewBag.Title = "Home Page";
}


<header class="navbar">
<img src="~/Img/logo-accueil-microblogging-noir-blanc.jpg" style="width:10%;" />
<h1> MicroBlogging</h1>
<input type="text" placeholder="Recherche..." /><i class="fas fa-search"></i>
</header>


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-xs-12">
            <h4>
                <span>Ajouter un post</span>

            </h4>

            <div class="form-group">
                <input type="text" value="" />
            </div>
            <div class="form-group">

                <input type="submit" value="Ajouter un post" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $(document).on('click', 'a', function () {
                $("#loaderModalShared").css('display', 'block');
                $("#loaderModalShared").css('position', 'absolute');
                $("#loaderModalShared").css('zIndex', 9999);
            });

            $("form").submit(function (e) {
                if ($("form").valid()) {
                    $("#loaderModalShared").css('display', 'block');
                    $("#loaderModalShared").css('position', 'absolute');
                    $("#loaderModalShared").css('zIndex', 9999);
                }
            });
        });
    </script>
}
